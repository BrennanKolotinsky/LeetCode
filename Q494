class Solution {
    public int findTargetSumWays(int[] nums, int S) {
        
        if (nums.length == 0)
            return 0;
        
        return dfs(nums, S, 0, 0);
    }
    
    public int dfs(int[] nums, int S, int pos, int total) {
        
        if (pos == nums.length) {
            if (total == S)
                return 1;
            return 0;
        }
        
        return dfs(nums, S, pos + 1, total + nums[pos]) + dfs(nums, S, pos + 1, total - nums[pos]);
    }
}